---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
let bt = "Isaac No | ".concat(title);
---

<html lang="en">
  <head>
    <BaseHead title={bt} description={description} />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.10/dist/katex.css"
      integrity="sha384-K1E1xaIzoWihlXfiT5fcmLNabsnrl+dqc0errnRwtMX14tKRA9cCYNDGnXiHEZMs"
      crossorigin="anonymous"
    />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 720px;
        margin: 0;
        margin-left: auto;
        margin-right: auto;
      }
      .hero-image {
        width: calc(100% - 2em);
        max-width: 720px;
        margin: 0;
        margin-left: auto;
        margin-right: auto;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
        width: auto;
      }
      .prose {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
      }
      .title {
        margin-bottom: 0em;
        padding: 1em 0;
        text-align: left;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0 0;
      }
      .description {
        margin: 0;
        color: rgb(var(--gray));
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }
      .blogimage {
        display: block;
        margin-left: auto;
        margin-right: auto;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <!-- 
        <div class="hero-image">
          {
            heroImage && (
              <img width={1080} height={540} src={heroImage} alt="" />
            )
          }
        </div>
      -->
        <div class="prose">
          <div class="title">
            <h2>{title}</h2>
            <p class="description">{description}</p>
            <hr />
            <div class="date">
              <FormattedDate date={pubDate} />
              {
                updatedDate && (
                  <div class="last-updated-on">
                    Last updated on <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
