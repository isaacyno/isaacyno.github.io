---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate } = Astro.props;
let bt = "Isaac No | ".concat(title);
---

<html lang="en">
  <head>
    <BaseHead title={bt} description={description} />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.10/dist/katex.css"
      integrity="sha384-K1E1xaIzoWihlXfiT5fcmLNabsnrl+dqc0errnRwtMX14tKRA9cCYNDGnXiHEZMs"
      crossorigin="anonymous"
    />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 720px;
        margin: 0;
        margin-left: auto;
        margin-right: auto;
      }
      .prose {
        width: 720px;
        max-width: calc(100% - 1em);
        margin: 0;
        padding: 0em 0.5em 1em 0.5em;
        color: rgb(var(--gray-dark));
      }
      html.dark .prose {
        color: var(--d-white);
      }
      .title {
        margin-bottom: 0em;
        padding: 0.5em 0;
        text-align: left;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0 0;
      }
      .description {
        margin: 0;
        color: rgb(var(--gray));
      }
      html.dark .description {
        color: var(--d-dark-white);
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      html.dark .date {
        color: var(--d-dark-white);
      }
      .blogimage {
        display: block;
        margin-left: auto;
        margin-right: auto;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="prose">
          <div class="title">
            <h2>{title}</h2>
            <p class="description">{description}</p>
            <hr />
            <div class="date">
              <FormattedDate date={pubDate} />
            </div>
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
